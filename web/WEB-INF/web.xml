        <servlet-name>AddItemServlet</servlet-name>
        <servlet-class>han.servlet.AddItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteItemServlet</servlet-name>
        <servlet-class>han.servlet.DeleteItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAccountServlet</servlet-name>
        <servlet-class>han.servlet.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationDTO</servlet-name>
        <servlet-class>han.registration.RegistrationDTO</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationDAO</servlet-name>
        <url-pattern>/RegistrationDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/DeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
