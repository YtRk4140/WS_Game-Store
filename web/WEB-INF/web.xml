    <servlet>
        <servlet-name>RegistrationDAO</servlet-name>
        <servlet-class>han.registration.RegistrationDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>han.servlet.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>han.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>han.servlet.SearchServlet</servlet-class>
